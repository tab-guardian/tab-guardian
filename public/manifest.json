{
    "manifest_version": 3,
    "name": "Tab Guardian",
    "description": "Browser extension that allows you to save and restore your tabs including encrypting them with a password",
    "permissions": ["storage", "tabs"],
    "version": "0.1.0",
    "web_accessible_resources": [
        {
            "resources": ["icons/*", "assets/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icons/icon-16-dark.png",
        "32": "icons/icon-32-dark.png",
        "48": "icons/icon-48-dark.png",
        "64": "icons/icon-64-dark.png",
        "128": "icons/icon-128-dark.png"
    },
    "action": {
		"default_icon": {
            "32": "icons/icon-32-dark.png",
            "16": "icons/icon-16-dark.png"
        },
		"default_title": "Tab Guardian",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "assets/background.js"
}
}
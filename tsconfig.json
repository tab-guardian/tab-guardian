{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
         "lib": ["es2021", "dom"],
        "sourceMap": true,
        "removeComments": true,
        "noEmitOnError": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false,

        /* Module Resolution Options */
        "baseUrl": "./src/ts",
        "paths": {
             "@/*": ["./*"]
         },
        "esModuleInterop": true,

        /* Advanced Options */
        "forceConsistentCasingInFileNames": true
    }
}
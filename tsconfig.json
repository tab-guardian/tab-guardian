{
    "compilerOptions": {
      "target": "es2022",
      "module": "esnext",
      "moduleResolution": "bundler",
      "useDefineForClassFields": true,
      "strict": true,
      "sourceMap": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "noEmit": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/popup/globals.d.ts"
      ],
      "paths": {
          "@/*": ["./src/popup/*"],
          "@bg/*": ["./src/background/*"],
          "@settings/*": ["./src/settings/*"],
          "@common/*": ["./src/common/*"],
          "@locales/*": ["./src/_locales/*"]
      }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
